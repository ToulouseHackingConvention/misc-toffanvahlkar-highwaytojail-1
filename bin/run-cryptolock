#!/bin/bash

readonly GUESTIP="10.0.2.2"

# Start the encryption
chmod +x "3-forensic/export/cryptolock"
scp -F res/ssh_config "3-forensic/export/cryptolock" "gru@${GUESTIP}:/tmp/"
ssh -nf -F res/ssh_config "gru@${GUESTIP}" /tmp/cryptolock -e

sleep 10

# Receive the encryption key (and the end of the encryption)
nc "${GUESTIP}" 54321 > tmp/key

